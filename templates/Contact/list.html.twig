{# templates/categorie/liste.html.twig #}

{% extends 'base.html.twig' %}

{% block content %}
    <h1>Liste des Catégories</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Code Raccourci</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                    <td>{{ categorie.codeRaccourci }}</td>
                    <td>
                        <a href="{{ path('edit_categorie', {'id': categorie.id}) }}">Modifier</a>
                        <a href="{{ path('delete_categorie', {'id': categorie.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('create_categorie') }}">Créer une Catégorie</a>
{% endblock %}
